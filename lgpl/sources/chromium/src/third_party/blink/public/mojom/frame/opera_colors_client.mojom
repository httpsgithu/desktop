module blink.mojom;

struct OperaColor {
  int32 color;
};

struct OperaColors {
  OperaColor? opera_gx_accent;
  OperaColor? opera_gx_base;
};

[EnableIf=opera_feature_blink_browser_colors]
interface OperaColorsClient {
  // Sets opera colors for the frame. They will be available to the page
  // via env(-opera-XXX-color) variables in CSS.
  SetColors(OperaColors colors);
};
