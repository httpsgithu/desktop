import("//build/config/opera_desktop.gni")
import("//build/config/product.gni")
import("//build/config/ui.gni")

declare_args() {
  # If true adds tracker reporting scripts using web3 object
  opera_blink_feature_script_tracker = product == "crypto"

  # Gpu shader css image filters
  opera_feature_blink_gpu_shader_css_filter = false

  # If true enables env(-opera-XXX-color) variables in CSS
  opera_feature_blink_browser_colors = false
}

# Unhandled Tap enable means Contextual Search aka Touch to Search.
# TODO(donnd): remove all unhandled-tap handling after the Long-press experiment
#              is fully launched.
enable_unhandled_tap = is_android

# Use Minikin hyphenation engine.
use_minikin_hyphenation = !is_apple && !opera_desktop
